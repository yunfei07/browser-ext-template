{
  "manifest_version": 3,
  "name": "浏览器插件模板",
  "short_name": "Ext Template",
  "version": "0.1.0",
  "description": "Chrome MV3 扩展的 Vite + TypeScript 模板，包含 background、content script 和 popup。",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extension Popup",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "permissions": ["tabs", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
